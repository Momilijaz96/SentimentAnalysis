FROM node:16.8-slim as builder

WORKDIR /app

COPY frontend/spa/package.json .

RUN npm install

COPY /frontend/spa .

RUN npm run build

FROM nginx:1.19-alpine

COPY --from=builder /app/build /usr/share/nginx/html

COPY /frontend/spa/conf/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 3000

CMD [ "nginx", "-g", "daemon off;" ]
